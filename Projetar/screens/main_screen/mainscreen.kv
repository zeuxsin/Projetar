<MainScreen>:
    name: 'Main'    
    MDFloatLayout:
        Image:
            source: "images/logoProjetar.png"
            size_hint: .50, .50
            pos_hint: {"center_x": .5, "center_y": .6}
            canvas.before:
                Color:
                    rgb: 1, .85, .825, 1
        
        MDIconButton:
            icon: "chevron-right"
            user_font_size: "40sp"
            pos_hint: {"center_x": .5, "center_y": .12}      
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'Login'

        MDLabel:
            text: "Menu Inicial"
            font_style: 'H5'
            bold: True
            pos_hint: {"center_x": .5, "center_y": .28}       
            halign: "center"

        MDLabel:
            text: "Clique no bot√£o para fazer Login"
            font_style: 'H6'
            pos_hint: {"center_x": .5, "center_y": .21}       
            halign: "center"