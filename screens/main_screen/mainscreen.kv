<MainScreen>:
    name: 'Main'
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "images/logoprojetar.png"
            size_hint: .3, .3
            pos_hint: {"center_x": .18, "center_y": .95}

        Image:
            source: "images/imagee.png"
            size_hint: .8, .8
            pos_hint: {"center_x": .5, "center_y": .65}

        MDLabel:
            text: "O l a !"
            font_size: "23sp"
            bold: True
            pos_hint: {"center_y": .38}
            halign: "center"
            color: rgba(34, 34, 34, 255)

        MDLabel:
            text: "Aprenda com empreendedores a ser um empreendedor de sucesso!"
            font_size: "13sp"
            size_hint_x: .83
            pos_hint: {"center_x": .5, "center_y": .3}
            halign: "center"
            color: rgba(127, 127, 127, 255)

        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Login'
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "REGISTER"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0, 0, 0, 0
            color: rgba(52, 0, 231, 255)
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'Register'
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100
