<PerfilScreen>:
    name: 'Perfil'
    MDFloatLayout:
        md_bg_color: rgba(2446, 250, 255, 255)

        ProfileCard:
            size_hint_y: .65
            pos_hint: {"center_y": .7}
            elevation: 6
            md_bg_color: 1, 1, 1, 1
            radius: [0, 0, 20, 20]

            MDIconButton:
                icon: "arrow-left"
                pos_hint: {'center_y': 0.91}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba(26, 24, 58, 255)
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'Home'

            MDIconButton:
                icon: "dots-vertical"
                pos_hint: {'center_x': 0.93,'center_y': 0.91}
                user_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba(71, 92, 119, 255)

            MDLabel:
                text: "Meu Perfil"
                font_size: "26sp"
                pos_hint: {"center_x": .56, "center_y": .82}
                color: rgba(71, 92, 119, 255)

            Image:
                source: 'images/iconUser.png'
                pos_hint: {'center_x': 0.5,'center_y': 0.62}

            MDLabel:
                text: "Usuario"
                pos_hint: {"center_y": .44}
                halign: "center"
                color: rgba(71, 92, 119, 255)

            MDLabel:
                text: "Microempreendedor na área de:"
                pos_hint: {"center_y": .36}
                halign: "center"
                font_size: "12sp"
                color: rgba(118, 202, 228, 255)

            MDLabel:
                text: "Espírito Santo, BR"
                pos_hint: {"center_y": .3}
                halign: "center"
                font_size: "12sp"
                color: rgba(118, 202, 228, 255)

            MDGridLayout:
                rows: 2
                cols: 3
                size_hint: .85, .12
                pos_hint: {'center_x': 0.5,'center_y': 0.15}
                MDLabel:
                    text: "Projetos"
                    halign: "center"
                    font_size: "12sp"
                    color: rgba(188, 202, 228, 255)
                MDLabel:
                    text: "Seguidores"
                    halign: "center"
                    font_size: "12sp"
                    color: rgba(188, 202, 228, 255)
                MDLabel:
                    text: "Seguindo"
                    halign: "center"
                    font_size: "12sp"
                    color: rgba(188, 202, 228, 255)
                MDLabel:
                    text: "..."
                    halign: "center"
                    font_size: "14sp"
                    color: rgba(71, 92, 119, 255)
                MDLabel:
                    text: "..."
                    halign: "center"
                    font_size: "14sp"
                    color: rgba(71, 92, 119, 255)
                MDLabel:
                    text: "..."
                    halign: "center"
                    font_size: "14sp"
                    color: rgba(71, 92, 119, 255)

        Button:
            text: "PROJETOS"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .27}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "BPMN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "DICAS"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
